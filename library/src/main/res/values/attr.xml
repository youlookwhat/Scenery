<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SceneryView">
        <!--The color of sun-->
        <attr name="sun_color" format="color" />
        <!--The color of the cloud-->
        <attr name="cloud_color" format="color" />
        <!--The color of the left mountain-->
        <attr name="left_mountain_color" format="color" />
        <!--The color of the right mountain-->
        <attr name="right_mountain_color" format="color" />
        <!--The color of the middle mountain-->
        <attr name="mid_mountain_color" format="color" />
        <!--The color of the background-->
        <attr name="background_color" format="color" />
    </declare-styleable>


    <declare-styleable name="RoundImageView">
        <attr name="image_radius" format="dimension" />//圆角大小
        <attr name="image_shadow_radius" format="dimension" />//阴影大小
        <attr name="image_circle" format="boolean" />//是否圆形
        <attr name="image_shadow" format="boolean" />//是否阴影
        <attr name="shadow_color" format="integer" />//阴影颜色
    </declare-styleable>

    <declare-styleable name="PerfectArcView">
        <attr name="p_arc_showImage" format="boolean" />
        <attr name="p_arc_startColor" format="integer" />
        <attr name="p_arc_endColor" format="integer" />
    </declare-styleable>

    <declare-styleable name="PullLoadingView">
        <!--  菊花颜色  -->
        <attr name="aiv_color" format="color" />
        <!--  开始角度  -->
        <attr name="aiv_startAngle" format="integer" />
        <!--  线条宽度  -->
        <attr name="aiv_strokeWidth" format="dimension" />
        <!--  是否自动开始  -->
        <attr name="aiv_auto_start" format="boolean" />
    </declare-styleable>


    <!--横向双水波浪进度条-->
    <declare-styleable name="HorizontalWaveProgressView">
        <!--波浪的颜色-->
        <attr name="wave_color" format="color" />
        <!--圆形背景颜色-->
        <attr name="wave_background_color" format="color" />
        <!--边框的颜色-->
        <attr name="border_color" format="color" />
        <!--波浪长度-->
        <attr name="wave_length" format="dimension" />
        <!--波浪高度-->
        <attr name="wave_height" format="dimension" />
        <!--当前进度-->
        <attr name="currentProgress" format="integer" />
        <!--最大进度-->
        <attr name="maxProgress" format="integer" />
        <!--第二层波浪是否显示-->
        <attr name="second_show" format="boolean" />
        <!--第二层波浪的颜色-->
        <attr name="second_color" format="color" />
    </declare-styleable>

</resources>